<div class="container px-5 px-sm-0">
    <div class="row">
    	<div class="col-md-3">
			<%= render 'books/list', book: @book, user: @user %>
	　　</div>
		  <div class="col-md-8 offset-md-1">
			<h2>Users</h2>
		    	<table class="table table-striped">
		      		<thead>
		        		<tr align="center">
		          			<th>image</th>
		          			<th>name</th>
		          			<th></th>
		          			<th colspan="3"></th>
		        		</tr>
		    		</thead>
		    		<tbody>
					  	<% @users.reverse_each do |user| %>
						<tr>
				      		<td><%= attachment_image_tag user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
				        	<td><%= user.name %></td>
				        	<td><%= link_to 'Show', user_path(user.id), class: "user_#{user.id}" %></td>
				     	</tr>
		        	  	<% end %>
		    		</tbody>
		      	</table>
		　</div>
  	</div>
   </div>
